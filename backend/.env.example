# Legal Database Credentials
QANONIAH_USERNAME=your_username
QANONIAH_PASSWORD=your_password
QANONIAH_BASE_URL=https://qanoniah.example.com

# Crawler Settings
HEADLESS_MODE=false
USER_DATA_DIR=./profiles
PAGE_TIMEOUT=60000
MAX_RETRIES=3
DELAY_BETWEEN_REQUESTS=2

# Browser Configuration
VIEWPORT_WIDTH=1280
VIEWPORT_HEIGHT=720
SIMULATE_USER=true
OVERRIDE_NAVIGATOR=true

# Logging
LOG_LEVEL=INFO
